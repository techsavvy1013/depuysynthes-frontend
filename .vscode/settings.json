{
  "eslint.validate": [
    "vue",
    "javascript",
    "javascriptreact"
  ],
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.tabCompletion": "on",
  "vetur.validation.template": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "css.validate": false,
  // the default StyleLint is checking way too much, so silence all that
  "stylelint.validate": [
    "css",
    "postcss",
    "vue",
  ],
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  "files.exclude": {
    "**/node_modules": true,
    "dist": true
  }
}
